####################################
# auto start Node Server
####################################
#!/bin/sh


#
case "$1" in
start)     
echo -n "Starting node: "
daemon node /home/pi/node/wifi-setting-server/bin/www
echo
;;
stop)      #종료시 행동
echo -n "Shutting down node : "
daemon node /home/pi/node/wifi-setting-server/bin/www
echo
;;
restart)     #재시작시 행동
$0 stop
$0 start
;;
*)            #기타 인수 없을때 메세지
echo "Usage : $0 {start|stop|restart}"
exit1
esac
exit 0

